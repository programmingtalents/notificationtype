<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
>

<TextView
    android:id="@+id/notification_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Notifications"
    android:layout_centerHorizontal="true"
    android:padding="10dp"/>

<Button
    android:id="@+id/simple_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/notification_txt"
    android:layout_centerHorizontal="true"
    android:text="Simple Notification"
    android:layout_marginTop="10dp"
    />

<Button
    android:id="@+id/big_txt_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/simple_notification"
    android:layout_centerHorizontal="true"
    android:text="Big Text Notification"
    android:layout_marginTop="10dp"
    />
<Button
    android:id="@+id/big_picture_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/big_txt_notification"
    android:layout_centerHorizontal="true"
    android:text="Big Picture Notification"
    android:layout_marginTop="10dp"
    />
<Button
    android:id="@+id/action_btn_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/big_picture_notification"
    android:layout_centerHorizontal="true"
    android:text="Action Button Notification"
    android:layout_marginTop="10dp"
    />

<Button
    android:id="@+id/headsup_notification"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/action_btn_notification"
    android:layout_centerHorizontal="true"
    android:text="Heads Up Notification"
    android:layout_marginTop="10dp"
    />
</RelativeLayout>
